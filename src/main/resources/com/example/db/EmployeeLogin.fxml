<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2" fx:controller="com.example.db.controllers.EmployeeLoginController" prefHeight="400" prefWidth="400" style="-fx-background-color: white;">
    <top>
        <Button text="Назад" onAction="#handleBackButton"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-border-color: #4A90E2; -fx-border-radius: 10; -fx-border-width: 2;">
            <Label text="Вход" style="-fx-text-fill: #2A58AE; -fx-font-size: 18pt;" />
            <TextField fx:id="emailField" promptText="Email" style="-fx-pref-width: 200; -fx-pref-height: 30;" />
            <PasswordField fx:id="passwordField" promptText="Пароль" style="-fx-pref-width: 200; -fx-pref-height: 30;" />
            <Button text="Войти" onAction="#handleLogin" style="-fx-background-color: linear-gradient(to bottom, #4A90E2, #2A58AE); -fx-text-fill: white; -fx-pref-width: 200; -fx-pref-height: 30;" />
        </VBox>
    </center>
</BorderPane>
