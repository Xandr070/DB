<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.db.controllers.IssuePageController" spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #f4f6f9; -fx-padding: 20;">
    <HBox alignment="BASELINE_CENTER" spacing="10">
        <Label style="-fx-font-size: 20px; -fx-text-fill: #2a58ae;" text="Выдача товаров" />
    </HBox>

    <HBox alignment="CENTER" spacing="20">
        <TextField fx:id="orderNumberField" style="-fx-pref-width: 200; -fx-pref-height: 30;" promptText="Введите номер заказа клиента"/>
        <Button onAction="#handleIssue" style="-fx-background-color: linear-gradient(to bottom, #4A90E2, #2A58AE); -fx-text-fill: white; -fx-font-size: 14pt; -fx-pref-width: 150; -fx-pref-height: 40; -fx-background-radius: 5;" text="Выдать" />
    </HBox>

    <Button onAction="#handleBack" style="-fx-background-color: linear-gradient(to bottom, #4A90E2, #2A58AE); -fx-text-fill: white; -fx-font-size: 14pt; -fx-pref-width: 100; -fx-pref-height: 30; -fx-background-radius: 5;" text="Назад" />
</VBox>
